@model Nettbank.Models.Transaksjon
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Registrer Betaling</title>
    <script src="~/scripts/jquery-3.1.1.js"></script>
    <script type="text/javascript">
        function hentKontoerAjax()
        {
            $("#KontoListe").load("/Konto/HentKonti", { kontoId: $("#idListe").val() });
        }

        function hentKontoerAjax1()
        {
            $.getJSON("/Konto/HentKonti1", { kontoId: $("#idListe").val() }, function (konto) {
                var ut = "Beløp på konto: ";
                for (var i in konto) {
                    ut += konto[i].saldo + "<br/>";
                }
                $("#KontoListe").html(ut);
            });
        }
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Registrer betaling</h4>
            <hr />
            <div class="form-group">
                @Html.Label("Fra Konto: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="idListe" onchange="hentKontoerAjax1()" name="utKontoId">
                        @for (var i = 0; i<10; i+=1)
                        {
                            <option></option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Til Konto: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("innKonto", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Beløp: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Beløp", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("KID: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("KID", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Melding: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("Melding", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrer betaling" class="btn btn-success" />
                    @Html.ActionLink("Vis Transaksjoner", "visTransaksjoner", new { tom = "" }, new { @class = "btn btn-primary" })
                </div>
            </div>
      </div>
    }
</body>
</html>
